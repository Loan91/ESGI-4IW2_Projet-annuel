{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Etape 2{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container mt-3">
        <h1 class="text-center">Mot de passe oublié - Etape 2</h1>

        {{ form_start(forgotPasswordFormStep2) }}

        <div class="row mt-5">
            <div class="col-md-6">

                {{ form_row(forgotPasswordFormStep1.password.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep1.password.second) }}
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary d-block mx-auto" title="Saisisez deux fois votre mot de passe pour le modifier.">Modifier mon mot de passe</button>
            <br>
            <small> Ce lien sera invalide à {{ passwordMustBeModifiedBefore }}</small>
        </div>

        {{ form_end(forgotPasswordFormStep2) }}
    </div>
{% endblock %}