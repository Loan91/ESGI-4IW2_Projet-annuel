{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Etape 1{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container mt-3">
        <h1 class="text-center">Mot de passe oublié - Etape 1</h1>

        {{ form_start(forgotPasswordFormStep1) }}

        <div class="row mt-5">
            <div class="col-md-6">

                {{ form_row(forgotPasswordFormStep1.email.first) }}
            </div>
            <div class="col-md-6">
                {{ form_row(forgotPasswordFormStep1.email.second) }}
            </div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary d-block mx-auto" title="Saisisez deux fois votre adresse e-mail pour recevoir un lien de récupération.">Envoyez-moi un lien de récupération</button>
        </div>

        {{ form_end(forgotPasswordFormStep1) }}
    </div>
{% endblock %}