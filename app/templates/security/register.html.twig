{% extends 'base_front.html.twig' %}


{% block title %}Créer un compte{% endblock %}

{% block body %}

    <div class="mt-5">
        <div class="flex justify-center max-w-3xl mx-auto">
            {{ form_start(registrationForm) }}
            <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-3xl">
                <h1 class="text-4xl text-center text-gray-900 mb-16">Inscrivez-vous</h1>
                <form action="#" method="POST">
                    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                        <div class="">
                            <div class="">
                                <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                                {{ form_widget(registrationForm.name,
                                    {
                                        'attr' :
                                        {
                                            'placeholder' : 'Nom',
                                            'class' : 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:border-gray-700 sm:text-sm',
                                            'type' : 'text',
                                            'id' : 'name'
                                        }
                                    }
                                )}}
                            </div>

                            <div class="mt-4">
                                <label class="block text-sm font-medium text-gray-700">Email</label>
                                {{ form_widget(registrationForm.email,
                                    {
                                        'attr' :
                                        {
                                            'placeholder' : 'Email',
                                            'class' : 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:border-gray-700 sm:text-sm',
                                            'type' : 'email',
                                            'id' : 'email'
                                        }
                                    }) }}
                            </div>
                            <div class="mt-4">
                                <label class="block text-sm font-medium text-gray-700">Mot de passe</label>
                                {{ form_widget(registrationForm.password,
                                    {
                                        'attr' :
                                        {
                                            'placeholder' : 'Mot de passe',
                                            'class' : 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:border-gray-700 sm:text-sm',
                                            'type' : 'password',
                                            'id' : 'password'
                                        }
                                    }) }}
                            </div>
                        </div>
                        <div class="mt-6">
                            <button type="submit" class="py-2 px-4 w-full border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Valider
                            </button>
                            <div class="mt-3">
                                <p>
                                    Déjà inscrit ? <a href="{{ path('app_login') }}" class="ml-2"> Se connecter</a>
                                </p>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
