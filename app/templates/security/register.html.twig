{% extends 'base_front.html.twig' %}


{% block title %}Créer un compte{% endblock %}

{% block body %}

    <div class="mt-5">
        <div class="flex justify-center max-w-md mx-auto">
            {{ form_start(registrationForm) }}
            <div class="mt-5 md:mt-0 md:col-span-2">
                <h1 class="text-4xl text-center text-gray-900 mb-16">Inscrivez-vous</h1>
                <form action="#" method="POST">
                    <div class="shadow overflow-hidden sm:rounded-md">
                        <div class="px-4 py-5 bg-white sm:p-6">
                            <div class="grid grid-cols-6 gap-6">
                                <div class="col-span-6 sm:col-span-4">
                                    <label for="name" class="block text-sm font-medium text-gray-700">Nom</label>
                                    {{ form_widget(registrationForm.name,
                                        {
                                            'attr' :
                                            {
                                                'placeholder' : 'Nom',
                                                'class' : 'mt-1 pl-1 border-2 border-black rounded',
                                                'type' : 'text',
                                                'id' : 'name'
                                            }
                                        }
                                    )}}
                                </div>

                                <div class="col-span-6 sm:col-span-4">
                                    <label class="block text-sm font-medium text-gray-700">Email</label>
                                    {{ form_widget(registrationForm.email,
                                        {
                                            'attr' :
                                            {
                                                'placeholder' : 'Email',
                                                'class' : 'mt-1 pl-1 border-2 border-black rounded',
                                                'type' : 'email',
                                                'id' : 'email'
                                            }
                                        }) }}
                                </div>
                                <div class="col-span-6 sm:col-span-4">
                                    <label class="block text-sm font-medium text-gray-700">Mot de passe</label>
                                    {{ form_widget(registrationForm.password,
                                        {
                                            'attr' :
                                            {
                                                'placeholder' : 'Mot de passe',
                                                'class' : 'mt-1 pl-1 border-2 border-black rounded',
                                                'type' : 'password',
                                                'id' : 'password'
                                            }
                                        }) }}
                                </div>
                            </div>
                        </div>
                        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">

                            <button type="submit" class="py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Valider
                            </button>
                            <div class="mt-3">
                                <p>
                                    Déjà inscrit ? <a href="{{ path('app_login') }}" class="ml-2"> Se connecter</a>
                                </p>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
