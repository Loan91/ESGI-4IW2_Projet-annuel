{% extends 'base_front.html.twig' %}


{% block title %}Créer un compte
{% endblock %}

{% block body %}
<div class="lg:w-1/3 mx-auto lg:pt-12 pt-8 px-4">
	<h1 class="text-4xl text-center text-gray-900 mb-4 font-bold">Inscrivez-vous</h1>

	{% include "components/alert.html.twig" %}

	{% form_theme registrationForm 'themes/tailwindcss.html.twig' %}
	{{ form_start(registrationForm) }}

	<div class="grid grid-cols-3 gap-6">
		<div class="col-span-2">
			{{ form_row(registrationForm.civility) }}
		</div>
	</div>

	<div class="grid grid-cols-4 gap-4">
		<div class="col-span-2">
			{{ form_row(registrationForm.firstname) }}
		</div>

		<div class="col-span-2">
			{{ form_row(registrationForm.lastname) }}
		</div>
	</div>


	{{ form_row(registrationForm.email) }}

	{{ form_row(registrationForm.password) }}

	<div class="mt-6">
		<div class="mt-3">
			<p>
				Déjà inscrit ?
				<a href="{{ path('app_login') }}" class="ml-2 italic">
					Se connecter</a>
			</p>
		</div>

		<!-- Validation -->
		<div class="py-3 bg-gray-50 text-right">
			<button type="submit" z
				class="w-full focus:outline-none text-white text-sm py-2.5 px-5 rounded-md bg-blue-500 hover:bg-blue-600 hover:shadow-lg">
				Valider
			</button>
		</div>
		{{ form_end(registrationForm) }}
	</div>
	</form>
</div>
{% endblock %}