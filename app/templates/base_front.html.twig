<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title> {% block title %} {{ appName }} {% endblock %} | Easy House</title>
    {# <link rel="stylesheet" href="{{ asset('main.css') }}"> #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('tailwind') }}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
</head>

<body>
    <nav class="bg-gray-800" x-data="{ open: false }">
        <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
            <div class="relative flex items-center justify-between h-16">
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    <!-- Mobile menu button-->
                    <button
                        class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
                        aria-expanded="false" @click="open = !open">
                        <span class="sr-only">Open main menu</span>
                        <!-- icon when open -->
                        <svg class="block h-6 w-6" :class="{ 'hidden': open, 'block': !open }" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                        <!-- icon when close -->
                        <svg class="hidden h-6 w-6" :class="{ 'hidden': !open, 'block': open }" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                            stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                    <div class="flex-shrink-0 flex items-center">
                        <a href="{{ path('front_home') }}" class="inline-block text-2xl text-white font-medium tracking-wide px-3 py-1 -ml-3">Easy House</a>
                    </div>
                </div>
                <div class="hidden sm:block absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                    <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
                    <a href="{{ path('front_home') }}"
                        class="bg-gray-900 text-white px-3 py-2 rounded-md text-sm font-medium">Accueil</a>
                    {% if app.user %}
                    <a href="{{ path('front_users') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Mon profil</a>
                    <a href="{{ path('front_contact_index') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Mes rendez-vous</a>
                        {% if app.user and is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('back_dashboard') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Tableau de bord</a>
                    {% endif %}
                    <a href="{{ path('app_logout') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Déconnexion</a>
                    {% else %}
                    <a href="{{ path('app_register') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">S'inscrire</a>
                    <a href="{{ path('app_login') }}"
                        class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Se connecter</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Mobile menu, toggle classes based on menu state. Menu open: "block", Menu closed: "hidden" -->
        <div :class="{ 'block': open, 'hidden': !open }" class="md:hidden block">
            <div class="px-2 pt-2 pb-3 sm:px-3">
                <a href="{{ path('front_home') }}" class="block px-3 py-2 rounded-md text-base font-medium text-white bg-gray-900 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Accueil</a>
                <a href="{{ path('app_register') }}" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">S'inscrire</a>
                <a href="{{ path('app_login') }}" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Se connecter</a>
                {% if app.user %}
                    <a href="{{ path('front_users') }}" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Mon profil</a>
                    <a href="{{ path('front_contact_index') }}" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Mes rendez-vous</a>
                {% endif %}
            </div>
            {% if app.user %}
                <div class="pt-4 pb-3 border-t border-gray-700">
                    <div class="flex items-center px-5 sm:px-6">
                        <div class="flex-shrink-0">
                            <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=facearea&amp;facepad=2&amp;w=256&amp;h=256&amp;q=80" alt="">
                        </div>
                        <div class="ml-3">
                            <div class="text-base font-medium leading-6 text-white">{{ app.user.lastname }}</div>
                            <div class="text-sm font-medium leading-5 text-gray-400">{{ app.user.email }}</div>
                        </div>
                    </div>
                    <div class="mt-3 px-2 sm:px-3">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('back_dashboard') }}" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Tableau de bord</a>
                        {% endif %}
                        <a href="{{ path('app_logout') }}" class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Déconnexion</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </nav>
    <div class="container mx-auto">
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}{% endblock %}
</body>

</html>