<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}{{ appName }}{% endblock %}
	</title>
	{% block stylesheets %}
	{{ encore_entry_link_tags('tailwind') }}
	{% endblock %}

	{% block headJavascripts %}
	<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
	{% endblock %}
</head>

<body class="h-screen w-full flex flex-col sm:flex-row bg-gray-200">
	<nav class="sm:w-24 flex flex-col items-center bg-white dark:bg-gray-800 py-4" x-data="{ open: false }">
		<!-- Left side NavBar -->

		<section class="w-full relative flex items-center justify-center">
			<div class="absolute inset-y-0 left-0 flex items-center sm:hidden ml-4">
				<!-- Mobile menu button-->
				<button
					class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white"
					aria-expanded="false" @click="open = !open">
					<span class="sr-only">Open main menu</span>
					<!-- icon when open -->
					<svg class="block h-6 w-6" :class="{ 'hidden': open, 'block': !open }"
						xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
						aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16" />
					</svg>
					<!-- icon when close -->
					<svg class="hidden h-6 w-6" :class="{ 'hidden': !open, 'block': open }"
						xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
						aria-hidden="true">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
							d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>

			<!-- App Logo -->
			<div>
				{% include "components/icons/home_back.svg" with {class: "h-8 w-8 fill-current text-blue-600
				dark:text-blue-300"} %}
			</div>
		</section>

		<ul class="hidden sm:block mt-2 flex sm:flex-col text-gray-700 dark:text-gray-400 capitalize">
			<!-- Links -->
			<li
				class="mt-3 p-2 hover:text-blue-600 dark:text-blue-300 rounded-lg {{ app.request.requestUri == path('back_dashboard') ? 'text-blue-600' : '' }}">
				<a href="{{ path('back_dashboard') }}" class=" flex flex-col items-center">
					<svg class="fill-current h-5 w-5" viewBox="0 0 24 24">
						<path d="M19 5v2h-4V5h4M9 5v6H5V5h4m10 8v6h-4v-6h4M9
							17v2H5v-2h4M21 3h-8v6h8V3M11 3H3v10h8V3m10
							8h-8v10h8V11m-10 4H3v6h8v-6z"></path>
					</svg>
					<span class="text-xs mt-2">Accueil</span>
				</a>
			</li>

			<li
				class="mt-3 p-2 hover:text-blue-600 dark:text-blue-300 rounded-lg {{ app.request.requestUri == path('back_user_index') ? 'text-blue-600' : '' }}">
				<a href="{{ path('back_user_index') }}/" class=" flex flex-col items-center">
					<svg class="fill-current h-5 w-5" version="1.1" xmlns="http://www.w3.org/2000/svg"
						xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 785.8159 1010"
						enable-background="new 0 0 785.8159 1010" xml:space="preserve">
						<g>
							<path
								d="M392.9692,0c135.251,0,244.8565,109.5234,244.8565,244.6914c0,135.312-109.6055,244.8145-244.8565,244.8145 c-135.1269,0-244.7734-109.5025-244.7734-244.8145C148.1958,109.5234,257.8423,0,392.9692,0z" />
							<path
								d="M785.8159,1010h-0.5762H0V876.8457c0-173.7793,109.3999-321.1318,261.9521-376.0586l131.0171,174.6016 l130.9756-174.6016c152.5938,54.9268,261.8711,202.2793,261.8711,376.0586V1010z" />
						</g>
					</svg>

					<span class="text-xs mt-2">Utilisateurs</span>
				</a>
			</li>

			<li class="mt-3 p-2 hover:text-blue-600 rounded-lg">
				<a href="{{ path('front_home') }}" class=" flex flex-col items-center">
					{% include "components/icons/user_at_home.svg" with {class: "fill-current h-5 w-5"} %}
					<span class="text-xs mt-2 text-center">Retour sur le site</span>
				</a>

			</li>

		</ul>

		<div class="hidden sm:block mt-auto flex items-center p-2 text-blue-700 bg-purple-200
			dark:text-blue-500 rounded-full">
			<!-- important action -->

			<a href="{{ path("app_logout") }}">
				{% include "components/icons/logout.svg" with {class: "fill-current h-6 w-6"} %}
			</a>
		</div>

		{# Phone #}
		<section :class="{ 'block': open, 'hidden': !open }" class="md:hidden block w-full mt-4">
			<div class="px-2 pt-2 pb-3 sm:px-3">
				<a href="{{ path('back_dashboard') }}"
					class="block px-3 py-2 rounded-md text-base font-medium text-gray-500 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Accueil</a>
				<a href="{{ path('back_user_index') }}"
					class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-500 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Utilisateurs</a>
				<a href="{{ path('front_home') }}"
					class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-500 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Retour
					sur le site</a>
				<a href="{{ path('app_logout') }}"
					class="mt-1 block px-3 py-2 rounded-md text-base font-medium text-gray-500 hover:text-white hover:bg-gray-700 focus:outline-none focus:text-white focus:bg-gray-700 transition duration-150 ease-in-out">Se d√©connecter</a>
			</div>
		</section>
	</nav>

	<main class="w-full">
		<section class="mx-8 my-6">
			{% block body %}{% endblock %}
		</section>
	</main>

	{% block bodyJavascripts %}
	{{ encore_entry_script_tags('app') }}
	{% endblock %}
</body>

{#
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> #}

</html>