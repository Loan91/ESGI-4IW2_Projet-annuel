{% extends 'base_front.html.twig' %}


{% block title %}Modification du profil{% endblock %}

{% block body %}
    <div class="mt-5">

        {% include "components/alert.html.twig" %}
        
        <div class="flex justify-center px-4">
            <div class=" pt-8 md:mt-0 md:col-span-2">
                <h1 class="text-4xl text-center text-gray-900 mb-8 font-bold">Modification du profil de {{ userFullname(app.user) }}</h1>
                {% form_theme form 'themes/tailwindcss.html.twig' %}
                {{ form_start(form, {attr: {class: "inline"}}) }}

                    {{ form_row(form.civility) }}

                    {{ form_row(form.firstname) }}

                    {{ form_row(form.lastname) }}

                    {{ form_row(form.email) }}

                    {{ form_row(form.phone) }}

                    <button type="submit" class="mt-8 focus:outline-none text-white text-sm py-2.5 px-5 rounded-md bg-blue-500 hover:bg-blue-600 hover:shadow-lg mr-2 mb-4">
                        Valider les modifications
                    </button>
                
                    <a href="{{ path('front_users') }}" class="focus:outline-none text-gray-600 text-sm py-2.5 px-5 rounded-md border border-gray-600 hover:bg-gray-50 mr-2">Retour sur le profil</a>
                {{ form_end(form) }}
                
                {% if not is_granted('ROLE_ADMIN') %}
                    {{ include('front/users/_delete_form.html.twig') }}
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
