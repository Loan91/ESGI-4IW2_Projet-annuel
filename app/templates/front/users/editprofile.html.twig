{% extends 'base_front.html.twig' %}


{% block title %}Modification du profil de {{ app.user.name }}{% endblock %}

{% block body %}

    <div class="mt-5">
        <div class="flex justify-center px-4">
            <div class=" pt-8 md:mt-0 md:col-span-2">
                <h1 class="text-4xl text-center text-gray-900 mb-8 font-bold">Modification du profil de {{ app.user.name }}</h1>
                {{ form_start(form) }}

                    <div class="mb-2">
                        <div class="text-red-600 font-bold">{{ form_errors(form.name) }}</div>
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'ml-2 border border-black rounded p-1'}}) }}
                        <div>{{ form_help(form.name) }}</div>

                    </div>
                    <div class="mb-8">
                        <div class="text-red-600 font-bold">{{ form_errors(form.email) }}</div>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'ml-2 border border-black rounded p-1'}}) }}
                        <div>{{ form_help(form.email) }}</div>
                    </div>

                    <button type="submit" class="focus:outline-none text-white text-sm py-2.5 px-5 rounded-md bg-blue-500 hover:bg-blue-600 hover:shadow-lg">Valider les modifications</button>
                {{ form_end(form) }}
                {% if not is_granted('ROLE_ADMIN') %}
                <div class="shadow overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 bg-white sm:p-6">
                        {{ include('front/users/_delete_form.html.twig') }}
                    </div>
                </div>
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
