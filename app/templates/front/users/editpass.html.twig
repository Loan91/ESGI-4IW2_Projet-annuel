{% extends 'base_front.html.twig' %}


{% block title %}Modification du mot de passe de {{ app.user.email }}{% endblock %}

{% block body %}

    <div class="mt-5">
        {% for error in app.flashes('error') %}
            <div class="alert-error" role="alert">{{ error }}</div>
        {% endfor %}
        <div class="flex justify-center max-w-md mx-auto">
            <div class="mt-5 md:mt-0 md:col-span-2">
                <h1 class="text-4xl text-center text-gray-900 mb-16">Modification du mot de passe de {{ app.user.email }}</h1>
                    <form method="post">
                        <div class="col-span-6 sm:col-span-4">
                            <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                            <input type="password" name="password" id="password" class="mt-1 pl-1 border-2 border-black rounded" required>
                        </div>

                        <div class="col-span-6 sm:col-span-4">
                            <label for="inputPassword" class="block text-sm font-medium text-gray-700">Confirmer le mot de passe</label>
                            <input type="password" name="password2" id="password2" class="mt-1 pl-1 border-2 border-black rounded" required>
                        </div>

                        <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                            <button type="submit" class="py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                Valider
                            </button>
                        </div>
                    </form>
                <div class="shadow overflow-hidden sm:rounded-md">
                    <div class="px-4 py-5 bg-white sm:p-6">

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
