{% extends 'base_front.html.twig' %}

{% block title %}Contactez nous{% endblock %}

{% block body %}
    <div class="mt-5">

    {% include "components/alert.html.twig" %}

        <div class="form-group">
        <div class="flex justify-center px-4">
            <div class=" pt-8 md:mt-0 md:col-span-2">
                <h1 class="text-4xl text-center text-gray-900 mb-8 font-bold">contact</h1>
                {% form_theme form 'themes/tailwindcss.html.twig' %}
            {{ form_start(form, {attr: {class: "inline"}})}}
            {{ form_row(form.firstname) }}

            {{ form_row(form.lastname) }}

        
       
            {{ form_row(form.email) }}

        
       
            {{ form_row(form.message) }}

       

        
            <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
        
        {{ form_end(form) }}
    </div>

    </div>
</div>

    {{ parent() }}
{% endblock %}
