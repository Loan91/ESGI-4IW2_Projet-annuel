{% extends 'base_front.html.twig' %}

{% block title %}Toutes vos favoris{% endblock %}

{% block body %}
<main class="max-w-7xl mx-auto px-4 sm:px-8 py-8">
    <h1 class="text-3xl font-semibold text-gray-900 tracking-wide mb-8">Vos favoris</h1>

    <!-- msg flash -->
    <div class="">
        {% for msg in app.flashes('success') %}
        <p>{{ msg }}</p>
        {% endfor %}
    </div>

    <div
        class="mt-12 space-y-4 sm:mt-16 sm:space-y-0 sm:grid sm:grid-cols-2 sm:gap-6 lg:max-w-4xl lg:mx-auto xl:max-w-none xl:mx-0 xl:grid-cols-4">
        {% for favorite in favorites %}
        <div class="border border-gray-200 rounded-lg shadow-sm divide-y divide-gray-200">
            <a href="{{ path('front_annonce_show', { 'id': favorite.property.id }) }}">
                {% if favorite.property.imageName is not null %}
                <img class="rounded-t-lg object-cover h-48 w-full" style="max-height: 192px; max-width: 284px;"
                    src="{{ uploaded_property_path ~ '/' ~ favorite.property.imageName }}" alt="image du bien">
                {% else %}
                <img class="rounded-t-lg object-cover h-48 w-full" style="max-height: 192px; max-width: 284px;"
                    src="{{ asset('images/maison-default.jpg') }}" alt="image du bien">
                {% endif %}

            </a>
            <div class="p-4">
                <h2 class="text-lg leading-6 font-medium text-gray-900">{{ favorite.property.type | capitalize }} à {{
                    favorite.property.city }}</h2>
                <p class="mt-2 w-full inline-flex items-end justify-between">
                    <span class="block text-xl font-semibold text-gray-900 tracking-wide">{{ favorite.property.price |
                        number_format(0, ',', ' ') }} €</span>
                    <span class="block text-lg font-medium text-gray-500">{{ favorite.property.area }}m<sup>2</sup></span>
                </p>
                <p class="text-center mt-3">
                    <a href="{{ path('front_favorite_delete', { 'id': favorite.id }) }}" class="bg-red-500 px-3 pt-1 pb-2 text-white rounded-lg shadow-xl">Supprimer</a>
                </p>
            </div>
        </div>
        {% endfor %}

        {% if favorites is empty %}
            Aucun favoris.
        {% endif %}
    </div>
</main>
{% endblock %}