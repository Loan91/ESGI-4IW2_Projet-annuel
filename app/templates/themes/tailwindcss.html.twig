{% use 'form_div_layout.html.twig' %}

{% block form_label -%}
{%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' text-md inline-block mb-2')|trim}) -%}
    {{ parent() }}
{%- endblock form_label %}

{% block form_widget_simple -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full shadow-sm border focus:outline-none sm:text-sm border-gray-300 rounded-md py-2 px-3')|trim}) -%}
    {{ parent() }}
{%- endblock form_widget_simple %}

{% block textarea_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full shadow-sm border focus:outline-none sm:text-sm border-gray-300 rounded-md py-2 px-3')|trim}) -%}
    {{ parent() }}
{%- endblock textarea_widget %}

{% block choice_widget_collapsed -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' w-full block border pl-3 pr-10 py-2 text-base bg-white bg-focus:outline-none sm:text-sm rounded-md')|trim}) -%}
    {{- parent() -}}
{%- endblock choice_widget_collapsed %}

{% block checkbox_widget -%}
    {%- set attr = attr|merge({class: (attr.class|default('') ~ ' ml-2 mt-1 pl-3 pr-10 py-2 text-base bg-white  bg-focus:outline-none sm:text-sm rounded-md')|trim}) -%}
    {{- parent() -}}
{%- endblock checkbox_widget %}

{% block form_row -%}
    {%- if compound is defined and compound -%}
        {%- set element = 'fieldset' -%}
    {%- endif -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}
    <{{ element|default('div') }}{% with {attr: row_attr|merge({class: (row_attr.class|default('') ~ ' form-group')|trim})} %}{{ block('attributes') }}{% endwith %}>
        {{- form_label(form) -}}
        {{- form_widget(form, widget_attr) -}}
        {{- form_help(form) -}}
    </{{ element|default('div') }}>
{%- endblock form_row %}